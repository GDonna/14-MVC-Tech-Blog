<div class="post">
<div class="card">
  <h2>{{post.title}}</h2>
  <a href="/blogposts/{{id}}">Read More</a>
  <p>Created by {{post.User.username}} on {{format_date post.createdAt}}</p>
  <div class ="card-body">{{post.postMessage}}
  </div>
</div>

{{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
                {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

</div>
